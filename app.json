{
  "expo": {
    "name": "Partybank",
    "slug": "PartyBank-MobileApp",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon/appicon.png",
    "scheme": "partybankmobileapp",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/icon/appicon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.thepartybank",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSCameraUsageDescription": "The Party Bank uses the camera to scan QR codes on event tickets for validation purposes. For example, when you scan a ticket's QR code at an event entrance, the app reads the encoded ticket information to verify its authenticity and check-in status. The camera feed is processed in real-time to extract the QR code data, and no images or videos are captured, stored, or uploaded."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/icon/appicon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO"
      ],
      "package": "com.chaos12.PartyBankMobileApp"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-font",
      "expo-web-browser",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow $(PRODUCT_NAME) to access your camera",
          "microphonePermission": "Allow $(PRODUCT_NAME) to access your microphone",
          "recordAudioAndroid": true
        }
      ],
      "expo-asset"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "28e0f69c-39f0-4516-bac6-5b399ccbf67b"
      }
    },
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "updates": {
      "url": "https://u.expo.dev/28e0f69c-39f0-4516-bac6-5b399ccbf67b"
    }
  }
}
